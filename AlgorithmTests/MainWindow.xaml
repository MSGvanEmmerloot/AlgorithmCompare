<Window x:Class="AlgorithmTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgorithmTests"
        mc:Ignorable="d"
        Title="Algorithm performance visualizer" Height="450" Width="800" Background="#FFE1F1F1" ResizeMode="NoResize">

    <Grid Height="420" Margin="0,0,-0.4,0" VerticalAlignment="Bottom">
        <Label x:Name="msgLabel" Content="" HorizontalAlignment="Left" Margin="76,214,0,0" VerticalAlignment="Top" Width="333"/>
        <Button x:Name="printButton" Content="Measure algorithm performance" HorizontalAlignment="Left" Margin="232,302,0,0" VerticalAlignment="Top" Width="222" Click="PrintButton_Click" Height="86"/>

        <Canvas  Name="canGraph" Background="White"
            Width="349" Height="198" Margin="105,86,0,0"
            HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <DataGrid x:Name="arrayData"   Margin="487,86,0,32" AutoGenerateColumns="False"
                  Width="254"
                  HorizontalAlignment="Left" AlternatingRowBackground="#FF98DD8A" AlternationCount="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=algorithmName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <CheckBox x:Name="checkBoxOne" Content="1" Margin="10,136,0,0" VerticalAlignment="Top" Click="CheckBoxOne_Click" IsChecked="True" HorizontalAlignment="Left"/>
        <CheckBox x:Name="checkBoxTwo" Content="2" HorizontalAlignment="Left" Margin="10,151,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Click="CheckBoxTwo_Click" IsChecked="True"/>
        <CheckBox x:Name="checkBoxThree" Content="3" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Click="CheckBoxThree_Click" IsChecked="True"/>
        <CheckBox x:Name="checkBoxFour" Content="4" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Click="CheckBoxFour_Click" IsChecked="True"/>
        <CheckBox x:Name="checkBoxFive" Content="5" HorizontalAlignment="Left" Margin="10,196,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Click="CheckBoxFive_Click" IsChecked="True"/>
        <Button x:Name="testButton" Content="Test" HorizontalAlignment="Left" Margin="105,342,0,0" VerticalAlignment="Top" Width="89" Click="TestButton_Click" Height="46"/>
        <CheckBox x:Name="checkBoxAutoResize" Content="auto resize" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Click="CheckBoxAutoResize_Click" IsChecked="True"/>
        <CheckBox x:Name="checkBoxPolyLine" Content="plot polyline" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Click="CheckBoxPlotPolyline_Click" IsChecked="True"/>
        

    </Grid>
</Window>
